SELECT addresses.country, SUM(salary)
FROM addresses, users
GROUP BY country;

 country | sum  
---------+------
 Belarus | 3696
 Ukrain  | 1848
 Poland  | 1848


SELECT addresses.country, SUM(salary)
FROM addresses, users
GROUP BY country HAVING SUM(salary) > 2000;


 country | sum  
---------+------
 Belarus | 3696
